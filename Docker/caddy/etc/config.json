{
  "logging": {
    "logs": {
      "default": {
        "level": "DEBUG"
      }
    }
  },
  "apps": {
    "layer4": {
      "servers": {
        "tls_proxy": {
          "listen": [":443"],
          "routes": [
            {
              "match": [
                {
                  "tls": {
                    "sni": []
                  }
                }
              ],
              "handle": [
                {
                  "handler": "tls"
                },
                {
                  "handler": "proxy",
                  "upstreams": [
                    {
                      "dial": ["unix//dev/shm/h2c.socket"]
                    }
                  ]
                }
              ]
            },
            {
              "match": [
                {
                  "tls": {
                    "sni": []
                  }
                }
              ],
              "handle": [
                {
                  "handler": "proxy",
                  "upstreams": [
                    {
                      "dial": ["unix//dev/shm/watchdog.socket"]
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "http": {
      "servers": {
        "web": {
          "listen": [":80"],
          "routes": [
            {
              "handle": [
                {
                  "handler": "static_response",
                  "headers": {
                    "Location": [
                      "https://{http.request.host}{http.request.uri}"
                    ]
                  },
                  "status_code": 301
                }
              ]
            }
          ]
        },
        "web-secure": {
          "listen": [":443"],
          "routes": [
            {
              "match": [
                {
                  "host": []
                }
              ],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "file_server",
                          "root": "/var/www/html"
                        }
                      ],
                      "terminal": true
                    }
                  ]
                }
              ]
            }
          ],
          "tls_connection_policies": [
            {
              "match": {
                "sni": []
              },
              "cipher_suites": [
                "TLS_CHACHA20_POLY1305_SHA256",
                "TLS_AES_128_GCM_SHA256",
                "TLS_AES_256_GCM_SHA384"
              ],
              "protocol_min": "tls1.3"
            }
          ]
        },
        "fallback": {
          "listener_wrappers": [
            {
              "wrapper": "proxy_protocol"
            }
          ],
          "listen": ["unix//dev/shm/h2c.socket"],
          "routes": [
            {
              "match": [
                {
                  "host": []
                }
              ],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "match": [
                        {
                          "header": {
                            "Connection": ["*Upgrade*"],
                            "Upgrade": ["websocket"]
                          },
                          "path": []
                        }
                      ],
                      "handle": [
                        {
                          "flush_interval": -1,
                          "handler": "reverse_proxy",
                          "headers": {
                            "request": {
                              "set": {
                                "X-Real-Ip": ["{http.request.remote.host}"]
                              }
                            }
                          },
                          "upstreams": [
                            {
                              "dial": "sing-box:9443"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "match": [
                        {
                          "path": [],
                          "protocol": "grpc"
                        }
                      ],
                      "handle": [
                        {
                          "flush_interval": -1,
                          "handler": "reverse_proxy",
                          "headers": {
                            "request": {
                              "set": {
                                "X-Real-Ip": ["{http.request.remote.host}"]
                              }
                            }
                          },
                          "transport": {
                            "protocol": "http",
                            "versions": ["h2c", "2"]
                          },
                          "upstreams": [
                            {
                              "dial": "sing-box:9444"
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "handle": [
                        {
                          "body": "Bad Request",
                          "close": true,
                          "handler": "static_response",
                          "status_code": 400
                        }
                      ],
                      "terminal": true
                    }
                  ]
                }
              ]
            },
            {
              "handle": [
                {
                  "handler": "reverse_proxy",
                  "headers": {
                    "request": {
                      "set": {
                        "X-Real-Ip": ["{http.request.remote.host}"]
                      }
                    }
                  },
                  "upstreams": [
                    {
                      "dial": "unix//dev/shm/watchdog.socket"
                    }
                  ]
                }
              ]
            }
          ],
          "automatic_https": {
            "disable": true
          },
          "protocols": ["h1", "h2c"]
        },
        "watchdog": {
          "listen": ["unix//dev/shm/watchdog.socket"],
          "routes": [
            {
              "handle": [
                {
                  "body": "Access Denied",
                  "close": true,
                  "handler": "static_response",
                  "status_code": 403
                }
              ],
              "terminal": true
            }
          ],
          "protocols": ["h2c", "h2", "h1"]
        }
      }
    },
    "tls": {
      "certificates": {
        "load_files": [
          {
            "certificate": "",
            "key": ""
          }
        ]
      }
    }
  }
}
